{
  // Required
  "name": "Auc Tools",
  "version": "2013.4.13",
  "manifest_version": 2,
  // Recommended
  "description": "英雄クロニクルの便利ツールの予定",
  // Add any of these that you need
  "content_scripts": [
    {
      "matches": [
        "http://suc.au-chronicle.jp/web/characters/edit_serif/*",
        "http://suc.au-chronicle.jp/web/characters/edit_serif_personal/*"
        ],
      "js": ["jquery.min.js", "aucserif.user.js"]
    },
    {
      "matches": [
        "http://suc.au-chronicle.jp/web/*"
        ],
      "js": ["jquery.min.js", "aucbbsnotify.user.js"]
    }
  ],
  "permissions": [
    "tabs",
    "http://suc.au-chronicle.jp/",
    "unlimitedStorage"
  ]
}